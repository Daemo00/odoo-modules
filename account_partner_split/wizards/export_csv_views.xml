<odoo>
    <record id="export_csv_view_form" model="ir.ui.view">
        <field name="name">Export CSV Form view</field>
        <field name="model">account_partner_split.export_csv</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="state" invisible="True" />
                    <group states="confirm">
                        <p>Just do it</p>
                    </group>
                    <group states="download">
                        <field name="file_name" invisible="True" />
                        <field name="file_data" filename="file_name" />
                    </group>
                    <footer states="confirm">
                        <button
                            name="export"
                            string="Export"
                            type="object"
                            class="btn-primary"
                        />
                        <button
                            string="Cancel"
                            class="btn-secondary"
                            special="cancel"
                        />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="export_csv_action" model="ir.actions.act_window">
        <field name="name">Export CSV</field>
        <field name="binding_model_id" ref="model_account_partner_split_account" />
        <field name="res_model">account_partner_split.export_csv</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
