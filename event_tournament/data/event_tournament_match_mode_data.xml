<odoo noupdate="1">
    <record
        id="event_tournament_match_mode_beach_volley"
        model="event.tournament.match.mode"
    >
        <field name="name">Beach volley</field>
        <field
            name="result_ids"
            eval="[
            (0, 0, {
                'won_sets': 2,
                'lost_sets': 0,
                'win_points': 3,
                'lose_points': 0}),
            (0, 0, {
                'won_sets': 2,
                'lost_sets': 1,
                'win_points': 2,
                'lose_points': 1})]"
        />
        <field name="win_set_points">21</field>
        <field name="win_tie_break_points">15</field>
        <field name="win_set_break_points">2</field>
    </record>
    <record
        id="event_tournament_match_mode_indoor_volley"
        model="event.tournament.match.mode"
    >
        <field name="name">Volley</field>
        <field
            name="result_ids"
            eval="[
            (0, 0, {
                'won_sets': 3,
                'lost_sets': 0,
                'win_points': 3,
                'lose_points': 0}),
            (0, 0, {
                'won_sets': 3,
                'lost_sets': 1,
                'win_points': 3,
                'lose_points': 0}),
            (0, 0, {
                'won_sets': 3,
                'lost_sets': 2,
                'win_points': 2,
                'lose_points': 1})]"
        />
        <field name="win_set_points">25</field>
        <field name="win_tie_break_points">15</field>
        <field name="win_set_break_points">2</field>
    </record>
</odoo>
