<odoo>
    <menuitem id="event_tournament_root_menu"
              name="Tournaments"
              parent="event.event_main_menu"/>

    <record id="event_tournament_view_form" model="ir.ui.view">
        <field name="name">event.tournament form view</field>
        <field name="model">event.tournament</field>
        <field name="arch" type="xml">
            <form string="Tournament">
                <header>
                    <button name="action_draft" string="Reset to draft" type="object" states="started,done"/>
                    <button name="action_start" string="Start" type="object" states="draft,done"/>
                    <button name="action_done" string="Done" type="object" states="draft,started"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_teams" type="object"
                                class="oe_stat_button" icon="fa-users">
                            <field name="team_count" widget="statinfo" string="Teams"/>
                        </button>
                        <button name="action_view_matches" type="object"
                                class="oe_stat_button" icon="fa-trophy">
                            <field name="match_count" widget="statinfo" string="Matches"/>
                        </button>
                    </div>
                    <group>
                        <field name="event_id"/>
                        <field name="name"/>
                        <field name="start_datetime"/>
                    </group>
                    <notebook>
                        <page name="rules" string="Rules">
                            <group>
                                <field name="min_components"/>
                                <field name="max_components"/>
                                <field name="min_components_female"/>
                                <field name="min_components_male"/>
                                <button name="action_check_rules" type="object" string="Check"/>
                            </group>
                        </page>
                        <page name="teams_matches" string="Teams &amp; Matches">
                            <group>
                                <field name="match_warm_up_duration" widget="float_time"/>
                                <field name="match_duration" widget="float_time"/>
                                <field name="match_teams_nbr"/>
                                <field name="court_ids" domain="[('event_id', '=', event_id)]"/>
                                <field name="randomize_matches_generation"/>
                                <field name="reset_matches_before_generation"/>
                                <button name="generate_view_matches" type="object" string="Generate matches"/>
                            </group>
                        </page>
                        <page name="inheritance" string="Inheritance">
                            <group>
                                <field name="parent_id"/>
                                <field name="child_ids"/>
                            </group>
                        </page>
                        <page name="notes" string="Notes">
                            <field name="notes" placeholder="Additional information..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="event_tournament_view_tree" model="ir.ui.view">
        <field name="name">event.tournament tree view</field>
        <field name="model">event.tournament</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <act_window id="event_tournament_action"
                name="Tournaments"
                res_model="event.tournament"/>
    <menuitem id="event_tournament_menu"
              parent="event_tournament_root_menu"
              action="event_tournament_action"/>
</odoo>
