<odoo>
    <menuitem id="event_tournament_root_menu"
              name="Tournaments"
              parent="event.event_main_menu"/>

    <record id="event_tournament_view_form" model="ir.ui.view">
        <field name="name">event.tournament form view</field>
        <field name="model">event.tournament</field>
        <field name="arch" type="xml">
            <form string="Tournament">
                <header>
                    <button name="action_done" string="Done" type="object" states="draft"/>
                    <button name="action_draft" string="Reset to draft" type="object" states="done"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="event_id"/>
                        <field name="name"/>
                        <field name="team_ids"/>
                        <field name="match_ids"/>
                    </group>
                    <group name="rules" string="Rules">
                        <field name="min_components"/>
                        <field name="max_components"/>
                        <field name="min_components_female"/>
                        <field name="min_components_male"/>
                        <button name="action_check_rules" type="object" string="Check"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="event_tournament_view_tree" model="ir.ui.view">
        <field name="name">event.tournament tree view</field>
        <field name="model">event.tournament</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <act_window id="event_tournament_action"
                name="Tournaments"
                res_model="event.tournament"/>
    <menuitem id="event_tournament_menu"
              parent="event_tournament_root_menu"
              action="event_tournament_action"/>
</odoo>
