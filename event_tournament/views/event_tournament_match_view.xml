<odoo>
    <record id="event_tournament_match_view_form" model="ir.ui.view">
        <field name="name">event.tournament.match form view</field>
        <field name="model">event.tournament.match</field>
        <field name="arch" type="xml">
            <form string="Match">
                <header>
                    <button name="action_draft" string="Reset to draft" type="object" states="done"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="tournament_id"/>
                        <field name="court_id"/>
                        <field name="time_scheduled_start"/>
                        <field name="time_scheduled_end"/>
                        <field name="line_ids" context="{'default_match_id': id}">
                            <tree editable="bottom">
                                <button name="action_win" string="Wins" title="Wins"
                                        type="object" class="btn-sm btn-primary"
                                        attrs="{'invisible': [('parent.state', '=', 'done')]}"/>
                                <field name="team_id" domain="[('tournament_id', '=', parent.tournament_id)]"/>
                                <field name="set_1"/>
                                <field name="set_2"/>
                                <field name="set_3"/>
                                <field name="set_4"/>
                                <field name="set_5"/>
                            </tree>
                        </field>
                        <field name="winner_team_id"/>
                        <field name="time_done"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="event_tournament_match_view_tree" model="ir.ui.view">
        <field name="name">event.tournament.match tree view</field>
        <field name="model">event.tournament.match</field>
        <field name="arch" type="xml">
            <tree>
                <field name="tournament_id"/>
                <field name="court_id"/>
                <field name="time_scheduled_start"/>
                <field name="line_ids" widget="many2many_tags"/>
                <field name="winner_team_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="event_tournament_match_view_search" model="ir.ui.view">
        <field name="name">event.tournament.match search view</field>
        <field name="model">event.tournament.match</field>
        <field name="arch" type="xml">
            <search>
                <field name="line_ids" widget="many2many_tags"/>
                <filter string="Court" name="court"
                        context="{'group_by':'court_id'}"/>
                <filter string="Tournament" name="tournament"
                        context="{'group_by':'tournament_id'}"/>
            </search>
        </field>
    </record>

    <act_window id="event_tournament_match_action"
                name="Tournament matches"
                res_model="event.tournament.match"/>
    <menuitem id="event_tournament_match_menu"
              parent="event_tournament_root_menu"
              action="event_tournament_match_action"/>
</odoo>
