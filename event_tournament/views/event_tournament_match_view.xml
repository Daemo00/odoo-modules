<odoo>
    <record id="event_tournament_match_view_form" model="ir.ui.view">
        <field name="name">event.tournament.match form view</field>
        <field name="model">event.tournament.match</field>
        <field name="arch" type="xml">
            <form string="Match">
                <header>
                    <button
                        name="action_draft"
                        string="Reset to draft"
                        type="object"
                        states="done"
                    />
                    <button
                        name="action_done"
                        string="Done"
                        type="object"
                        states="draft"
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <field name="event_id" />
                        <field name="tournament_id" />
                        <field name="match_mode_id" invisible="True" />
                        <field name="court_id" />
                        <field name="time_scheduled_start" />
                        <field name="time_scheduled_end" />
                        <field
                            name="team_ids"
                            widget="many2many_tags"
                            options="{'open': True,}"
                        />
                        <field
                            name="set_ids"
                            widget="many2many_tags"
                            context="{'default_match_id': id}"
                        >
                            <tree>
                                <field name="name" />
                            </tree>
                        </field>
                        <field
                            name="result_ids"
                            widget="x2many_2d_matrix"
                            field_x_axis="team_id"
                            field_y_axis="set_id"
                            field_value="score"
                        >
                            <tree>
                                <field name="set_id" />
                                <field name="team_id" />
                                <field name="score" />
                            </tree>
                        </field>
                    </group>
                    <group
                        attrs="{
                            'invisible': [
                                ('state', '!=', 'done'),
                            ],
                        }"
                    >
                        <field name="winner_team_id" />
                        <field name="time_done" />
                        <field name="stats_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="event_tournament_match_view_kanban" model="ir.ui.view">
        <field name="name">event.tournament.match kanban view</field>
        <field name="model">event.tournament.match</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <progressbar
                    field="state"
                    colors="{&quot;done&quot;: &quot;success&quot;, &quot;draft&quot;: &quot;danger&quot;}"
                />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong>
                                        <field
                                            name="state"
                                            widget="state_selection"
                                            class="ms-auto float-end"
                                        />
                                        <field name="display_name" />
                                    </strong>
                                    <div class="text-muted">
                                        <field name="tournament_id" />
                                    </div>
                                    <div class="text-muted">
                                        <field name="court_id" />
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span
                                        class="fa fa-clock-o"
                                        title="Time start"
                                        aria-label="Time start"
                                    />
                                    <field name="time_scheduled_start" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="event_tournament_match_view_tree" model="ir.ui.view">
        <field name="name">event.tournament.match tree view</field>
        <field name="model">event.tournament.match</field>
        <field name="arch" type="xml">
            <tree>
                <field name="tournament_id" />
                <field name="court_id" />
                <field name="time_scheduled_start" />
                <field name="set_ids" widget="many2many_tags" />
                <field name="winner_team_id" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record id="event_tournament_match_view_calendar" model="ir.ui.view">
        <field name="name">event.tournament.match calendar view</field>
        <field name="model">event.tournament.match</field>
        <field name="arch" type="xml">
            <calendar
                date_start="time_scheduled_start"
                date_stop="time_scheduled_end"
                color="court_id"
            >
                <field name="display_name" />
                <field name="court_id" filters="True" />
            </calendar>
        </field>
    </record>
    <record id="event_tournament_match_view_timeline" model="ir.ui.view">
        <field name="name">event.tournament.match timeline view</field>
        <field name="model">event.tournament.match</field>
        <field name="arch" type="xml">
            <timeline
                date_start="time_scheduled_start"
                date_stop="time_scheduled_end"
                string="Matches"
                default_group_by="court_id"
                event_open_popup="true"
            >
                <field name="team_ids" />
                <templates>
                    <t t-name="timeline-item">
                        <div
                            style="display:flex;justify-content:center;align-items:center;height: 80px; white-space: break-spaces;"
                        >
                            <p t-esc="record.display_name" />
                        </div>
                    </t>
                </templates>
            </timeline>
        </field>
    </record>
    <record id="event_tournament_match_view_search" model="ir.ui.view">
        <field name="name">event.tournament.match search view</field>
        <field name="model">event.tournament.match</field>
        <field name="arch" type="xml">
            <search>
                <field name="tournament_id" />
                <field name="team_ids" />
                <field name="component_ids" />
                <filter string="Court" name="court" context="{'group_by':'court_id'}" />
                <filter
                    string="Tournament"
                    name="tournament"
                    context="{'group_by':'tournament_id'}"
                />
            </search>
        </field>
    </record>
    <record id="event_tournament_match_action" model="ir.actions.act_window">
        <field name="name">Tournament matches</field>
        <field name="res_model">event.tournament.match</field>
        <field name="view_mode">kanban,timeline,calendar,tree,form</field>
    </record>
    <menuitem
        id="event_tournament_match_menu"
        parent="event_tournament_root_menu"
        action="event_tournament_match_action"
    />
</odoo>
